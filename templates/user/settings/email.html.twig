{% extends "base.html.twig" %}

{% block title %}param√®tres email{% endblock %}
{% form_theme form 'partials/formThemeDefault.html.twig' %}
{% block style %}<link rel="stylesheet" type="text/css" href="/css/settings.css" media="screen">{% endblock %}
{% block body %}
<div class="settings" role="main">

    {% include "partials/user_settings_navbar.html.twig" %}

    <div class="container text-center">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-7">
                {{form_start(form, {"attr": {"class" : "settingsForm"} }) }}
                    <div class="card border-gray mb-3">
                        <div class="card-heading bg-light py-3">
                            <span>Adresse e-mail</span>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <div class="input-container col-md-12 col-sm-12 mb-2">
                                    {{form_widget(form.oldEmail, {'value' : app.user.email, }) }}
                                    {{form_label(form.oldEmail)}}
                                    <div class="bar"></div>
                                </div>
                                {{form_errors(form.oldEmail)}}
                            </div>

                            {{form_rest(form)}}
                        </div>
                    </div>
                    <div class="settingValidate mt-4">
                        <button type="submit" class="btn btn-primary">Enregister les modifications</button>
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}
