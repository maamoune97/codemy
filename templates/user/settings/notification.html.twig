{% extends "base.html.twig" %}

{% block title %}Parametre de notification{% endblock %}

{% block style %}
<link rel="stylesheet" type="text/css" href="/css/settings.css" media="screen">{% endblock %}

{# {% form_theme form 'partials/formThemeDefault.html.twig' %} #}

{% block body %}
<div class="settings" role="main">

    {% include "partials/user_settings_navbar.html.twig" %}

    <div class="container text-center">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="settingsForm">
                    <div class="card border-gray mb-4">
                        <div class="card-heading bg-light py-3">
                            <span>Notifications</span>
                        </div>
                        <div class="card-body">
                            <div class="notification-checkbox text-left mt-3 mb-3">
                                <label class="toggle">
                                    <input class="toggleInput" type="checkbox">
                                    <span class="toggleLabel">
                                        <span class="notification__text">
                                            Je voudrais recevoir des recomandations de cours par e-mail
                                        </span>
                                    </span>
                                </label>
                            </div>
                            <div class="notification-checkbox text-left mt-4 mb-3">
                                <label class="toggle">
                                    <input class="toggleInput" type="checkbox">
                                    <span class="toggleLabel">
                                        <span class="notification__text">
                                            Recevoir des notifications sur les annonces ou publications des formateurs
                                            concernant un cours dont vous etes inscrits.
                                        </span>
                                    </span>
                                </label>
                            </div>
                            <div class="notification-checkbox text-left mt-4 mb-3">
                                <label class="toggle">
                                    <input class="toggleInput" type="checkbox">
                                    <span class="toggleLabel">
                                        <span class="notification__text">
                                            Je voudrais recevoir des recomandations de cours par e-mail
                                        </span>
                                    </span>
                                </label>
                            </div>
                            <div class="notification-checkbox text-left mt-4 mb-3">
                                <label class="toggle">
                                    <input class="toggleInput" type="checkbox">
                                    <span class="toggleLabel">
                                        <span class="notification__text">
                                            Je voudrais recevoir des recomandations de cours par e-mail
                                        </span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="settingValidate mt-5">
                        <button type="submit" class="btn btn-primary">Enregister les modifications</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}